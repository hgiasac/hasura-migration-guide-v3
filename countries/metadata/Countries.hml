---
kind: ObjectType
version: v1
definition:
  name: CountryFilterInput
  fields:
    - name: code
      type: StringQueryOperatorInput
    - name: continent
      type: StringQueryOperatorInput
    - name: currency
      type: StringQueryOperatorInput
    - name: name
      type: StringQueryOperatorInput
  graphql:
    typeName: CountryFilterInput
    inputTypeName: CountryFilterInputInput
  dataConnectorTypeMapping:
    - dataConnectorName: countries
      dataConnectorObjectType: CountryFilterInput

---
kind: TypePermissions
version: v1
definition:
  typeName: CountryFilterInput
  permissions:
    - role: admin
      output:
        allowedFields:
          - code
          - continent
          - currency
          - name
    - role: user
      output:
        allowedFields:
          - code
          - continent
          - currency
          - name
    - role: anonymous
      output:
        allowedFields:
          - code
          - continent
          - currency
          - name

---
kind: Command
version: v1
definition:
  name: Countries
  outputType: "[Country!]!"
  arguments:
    - name: filter
      type: CountryFilterInput
  source:
    dataConnectorName: countries
    dataConnectorCommand:
      function: countries
  graphql:
    rootFieldName: countries
    rootFieldKind: Query

---
kind: CommandPermissions
version: v1
definition:
  commandName: Countries
  permissions:
    - role: admin
      allowExecution: true
    - role: user
      allowExecution: true
    - role: anonymous
      allowExecution: true
